{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
<div class="d-flex justify-content-center min-vh">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div>
        <h1 class="mb-4 font-weight-bold">Nous contacter</h1>
        {{ form_start(form, {'attr': {'class': 'form-container text-center'}}) }}
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group mt-4">
                {{ form_row(form.message, {'attr': {'class': 'contact-input min-height'}}) }}
            </div>
            <div class="form-group mt-5">
                {{ form_row(form.save) }}
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
