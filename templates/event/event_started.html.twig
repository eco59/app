{% extends 'base.html.twig' %}

{% block title %}Événement Commencé{% endblock %}

{% block body %}
<div class="text-center min-vh">
    <h1 class="font-weight-bold">L'événement "{{ event.Titre }}" a commencé !</h1>
    <p class="bg-color text-white mt-5">Description : {{ event.Description }}</p>
    <a href="{{ path('app_event') }}" class="btn btn-primary mt-5">Retour à la liste des événements</a>
</div>
{% endblock %}
