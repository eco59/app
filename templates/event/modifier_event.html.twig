{% extends 'base.html.twig' %}

{% block title %}Modifier l'événement{% endblock %}

{% block body %}
<div class="d-flex justify-content-center min-vh">
    {{ form_start(form, {'attr': {'class': 'form-container text-center'}}) }}
    <h1 class="mb-4 font-weight-bold">Modifier l'événement : {{ event.Titre }}</h1>
    
    <div class="form-group">
        {{ form_label(form.Titre) }}
        {{ form_widget(form.Titre, {'attr': {'class': 'custom-input bg-blue'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.Description) }}
        {{ form_widget(form.Description, {'attr': {'class': 'custom-input min-height bg-blue'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.Nombre_de_joueur) }}
        {{ form_widget(form.Nombre_de_joueur, {'attr': {'class': 'custom-input bg-blue'}}) }}
    </div>
    
    <div class="row">
        <div class="form-group">
            {{ form_label(form.date_heure_debut) }}
            {{ form_widget(form.date_heure_debut, {'attr': {'class': 'custom-input bg-blue'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.date_heure_fin) }}
            {{ form_widget(form.date_heure_fin, {'attr': {'class': 'custom-input bg-blue'}}) }}
        </div>
    </div>
    
    <div class="row">
        <div class="col form-group">
            {{ form_label(form.Image) }}
            {{ form_widget(form.Image, {'attr': {'class': 'custom-input bg-blue'}}) }}
            {% if event.Image %}
                <div class="mt-2 mb-4">
                    <img src="{{ asset('uploads/Event/' ~ event.Image) }}" alt="{{ event.Titre }}" width="150">
                </div>
            {% endif %}
        </div>
    </div>
    
    <div class="d-flex justify-content-center mb-5">
        <button class="bg-pink btn-lg btn custom-btn me-5" type="submit">Sauvegarder les modifications</button>
        <a href="{{ path('app_mes_events') }}" class="btn btn-danger bg-lg custom-btn">Annuler</a>
    </div>
    
    {{ form_end(form) }}
</div>
{% endblock %}
