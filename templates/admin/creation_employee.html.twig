{% extends 'base.html.twig' %}

{% block title %}Création d'un employé{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center min-vh">
        {{ form_start(form, {'attr': {'class': 'rounded text-center', 'style': 'max-width: 300px;'}}) }}
        <h1 class="mb-4 font-weight-bold">Créer un nouvel employé</h1>

        <div class="form-group mb-4">
            {{ form_label(form.pseudo) }}
            {{ form_widget(form.pseudo, {'attr': {'class': 'form-control bg-blue'}}) }}
            {{ form_errors(form.pseudo) }}
        </div>
        
        <div class="form-group mb-4">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control bg-blue'}}) }}
            {{ form_errors(form.email) }}
        </div>
        
        <div class="form-group mb-4">
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control bg-blue'}}) }}
            {{ form_errors(form.password) }}
        </div>
        
        <div class="form-group mb-4 pt-2">
            {{ form_widget(form.save, {'attr': {'class': 'form-control bg-pink custom-btn'}}) }}
        </div>
        <a href="{{ path('app_liste_user') }}" class="custom-btn bg-blue">Retour à la liste des utilisateurs</a>
            
    </div>
    {{ form_end(form) }}
{% endblock %}
