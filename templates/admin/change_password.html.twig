{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
<div class="d-flex justify-content-center min-vh">
    <div class="rounded text-center" style="max-width: 300px;">
        <h3 class="mb-4 font-weight-bold">Changer le mot de passe de : {{ user.pseudo }}</h3>
        {{ form_start(form) }}
        <div class="form-group mb-4">
            {{ form_row(form.newPassword, {'attr': {'class': 'form-control bg-blue'}}) }}
        </div>
        <div class="form-group mb-4 pt-2">
            <button class="form-control bg-pink custom-btn">Changer le mot de passe</button>
        </div>
        <a href="{{ path('app_liste_user') }}" class="custom-btn bg-blue">Retour Ã  la liste des utilisateurs</a>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
